<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="?android:attr/buttonBarStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="15dp"
    android:paddingTop="16dp"
    android:layout_marginHorizontal="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        tools:ignore="RtlSymmetry">

        <Button
            android:id="@+id/ui_font_style"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="中/粗/细"
            android:textSize="@dimen/ui_panel_textsize"
            android:gravity="center"
            android:textColor="@color/black"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/ui_font"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/ui_panel_textsize"
            android:text="字体"
            android:textColor="@color/black"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/ui_indent"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/ui_panel_textsize"
            android:text="缩进"
            android:textColor="@color/black"
            tools:ignore="ContentDescription,HardcodedText" />

        <Button
            android:id="@+id/ui_simplify"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/ui_panel_textsize"
            android:text="简/繁"
            android:textColor="@color/black"
            tools:ignore="ContentDescription,HardcodedText" />

        <Button
            android:id="@+id/ui_padding"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/ui_panel_textsize"
            android:text="边距"
            android:textAllCaps="false"
            android:gravity="center"
            android:textColor="@color/black"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/ui_info"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/ui_panel_textsize"
            android:text="信息"
            android:textAllCaps="false"
            android:gravity="center"
            android:textColor="@color/black"
            tools:ignore="HardcodedText" />

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingHorizontal="5dp"
        tools:ignore="RtlSymmetry">

        <TextView
            android:id="@+id/ui_font_size_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="字号"
            android:textSize="14sp"
            android:paddingStart="10dp"
            android:paddingEnd="15dp"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:ignore="HardcodedText" />

        <!-- Minus button -->
        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/ui_font_size_minus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/minus"
            android:tint="@color/black"
            app:layout_constraintStart_toEndOf="@id/ui_font_size_label"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- SeekBar -->
        <androidx.appcompat.widget.AppCompatSeekBar
            android:id="@+id/ui_font_size_progress_bar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:thumbTint="#4B4B4B"
            android:progressTint="#4B4B4B"
            app:layout_constraintStart_toEndOf="@id/ui_font_size_minus"
            app:layout_constraintEnd_toStartOf="@id/ui_font_size_plus"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- Plus button -->
        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/ui_font_size_plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/plus"
            android:tint="@color/black"
            app:layout_constraintEnd_toStartOf="@id/ui_font_size_num"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- Number TextView (at the far right) -->
        <TextView
            android:id="@+id/ui_font_size_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.0"
            android:textSize="14sp"
            android:paddingStart="10dp"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:ignore="HardcodedText" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingHorizontal="5dp"
        tools:ignore="RtlSymmetry">

        <TextView
            android:id="@+id/ui_font_space_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="字距"
            android:textSize="14sp"
            android:paddingStart="10dp"
            android:paddingEnd="15dp"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:ignore="HardcodedText" />

        <!-- Minus button -->
        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/ui_font_space_minus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/minus"
            android:tint="@color/black"
            app:layout_constraintStart_toEndOf="@id/ui_font_space_label"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- SeekBar -->
        <androidx.appcompat.widget.AppCompatSeekBar
            android:id="@+id/ui_font_space_progress_bar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:thumbTint="#4B4B4B"
            android:progressTint="#4B4B4B"
            app:layout_constraintStart_toEndOf="@id/ui_font_space_minus"
            app:layout_constraintEnd_toStartOf="@id/ui_font_space_plus"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- Plus button -->
        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/ui_font_space_plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/plus"
            android:tint="@color/black"
            app:layout_constraintEnd_toStartOf="@id/ui_font_space_num"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- Number (at far right) -->
        <TextView
            android:id="@+id/ui_font_space_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.0"
            android:textSize="14sp"
            android:paddingStart="10dp"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:ignore="HardcodedText" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <!-- Line spacing control -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingHorizontal="5dp"
        tools:ignore="RtlSymmetry">

        <TextView
            android:id="@+id/ui_line_space_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="行距"
            android:textSize="14sp"
            android:paddingStart="10dp"
            android:paddingEnd="15dp"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:ignore="HardcodedText" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/ui_line_space_minus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/minus"
            android:tint="@color/black"
            app:layout_constraintStart_toEndOf="@id/ui_line_space_label"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <androidx.appcompat.widget.AppCompatSeekBar
            android:id="@+id/ui_line_space_progress_bar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:thumbTint="#4B4B4B"
            android:progressTint="#4B4B4B"
            app:layout_constraintStart_toEndOf="@id/ui_line_space_minus"
            app:layout_constraintEnd_toStartOf="@id/ui_line_space_plus"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/ui_line_space_plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/plus"
            android:tint="@color/black"
            app:layout_constraintEnd_toStartOf="@id/ui_line_space_num"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/ui_line_space_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.0"
            android:textSize="14sp"
            android:paddingStart="10dp"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:ignore="HardcodedText" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <!-- Paragraph spacing control -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingHorizontal="5dp"
        tools:ignore="RtlSymmetry">

        <TextView
            android:id="@+id/ui_para_space_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="段距"
            android:textSize="14sp"
            android:paddingStart="10dp"
            android:paddingEnd="15dp"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:ignore="HardcodedText" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/ui_para_space_minus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/minus"
            android:tint="@color/black"
            app:layout_constraintStart_toEndOf="@id/ui_para_space_label"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <androidx.appcompat.widget.AppCompatSeekBar
            android:id="@+id/ui_para_space_progress_bar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:thumbTint="#4B4B4B"
            android:progressTint="#4B4B4B"
            app:layout_constraintStart_toEndOf="@id/ui_para_space_minus"
            app:layout_constraintEnd_toStartOf="@id/ui_para_space_plus"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/ui_para_space_plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/plus"
            android:tint="@color/black"
            app:layout_constraintEnd_toStartOf="@id/ui_para_space_num"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/ui_para_space_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.0"
            android:textSize="14sp"
            android:paddingStart="10dp"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:ignore="HardcodedText" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:layout_width="match_parent"
        android:layout_marginVertical="8dp"
        android:layout_marginHorizontal="15dp"
        android:layout_height="2dp"
        android:background="@color/split_line"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="翻页动画"
        android:paddingStart="5dp"
        android:textSize="12sp"
        tools:ignore="HardcodedText" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        tools:ignore="RtlSymmetry">

        <Button
            android:id="@+id/pageturn_cover"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="覆盖"
            android:gravity="center"
            android:textColor="@color/black"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/pageturn_slide"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="左右"
            android:textColor="@color/black"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/pageturn_simulation"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="仿真"
            android:textColor="@color/black"
            tools:ignore="ContentDescription,HardcodedText" />

        <Button
            android:id="@+id/pageturn_scroll"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="滚动"
            android:textColor="@color/black"
            tools:ignore="ContentDescription,HardcodedText" />

        <Button
            android:id="@+id/pageturn_ibook_slide"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="iBook"
            android:textAllCaps="false"
            android:gravity="center"
            android:textColor="@color/black"
            tools:ignore="HardcodedText" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_marginVertical="8dp"
        android:layout_marginHorizontal="15dp"
        android:layout_height="2dp"
        android:background="@color/split_line"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="文字颜色和背景"
        android:paddingStart="5dp"
        android:textSize="12sp"
        tools:ignore="HardcodedText" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        tools:ignore="RtlSymmetry">

        <Button
            android:id="@+id/theme_1"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="主题1"
            android:gravity="center"
            android:textColor="@color/black"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/theme_2"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="主题2"
            android:textColor="@color/black"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/theme_3"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="主题3"
            android:textColor="@color/black"
            tools:ignore="ContentDescription,HardcodedText" />

        <Button
            android:id="@+id/theme_4"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="主题4"
            android:textColor="@color/black"
            tools:ignore="ContentDescription,HardcodedText" />

        <Button
            android:id="@+id/theme_5"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="主题5"
            android:textAllCaps="false"
            android:gravity="center"
            android:textColor="@color/black"
            tools:ignore="HardcodedText" />

    </LinearLayout>

</LinearLayout>