<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"

    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/segmented_label_controll_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingBottom="15dp"
        android:textColor="@color/black"
        android:text="边距"
        tools:ignore="HardcodedText" />

    <org.peyilo.readview.demo.view.SegmentedControl
        android:id="@+id/segmented_label_controll_segmented"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@id/segmented_label_controll_label"/>


</androidx.constraintlayout.widget.ConstraintLayout>