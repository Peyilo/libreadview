<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"

    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/padding_controll_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingBottom="15dp"
        android:textColor="@color/black"
        android:text="边距"
        tools:ignore="HardcodedText" />

    <org.peyilo.readview.demo.view.SegmentedControl
        android:id="@+id/padding_controll_segmented"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@id/padding_controll_label"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:columnCount="2"
        app:layout_constraintTop_toBottomOf="@id/padding_controll_segmented">

        <org.peyilo.readview.demo.view.DualThumbProgressBar
            android:id="@+id/padding_controll_left"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:paddingVertical="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="10dp"
            tools:ignore="NestedWeights" />

        <org.peyilo.readview.demo.view.DualThumbProgressBar
            android:id="@+id/padding_controll_right"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:paddingVertical="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="5dp" />

        <org.peyilo.readview.demo.view.DualThumbProgressBar
            android:id="@+id/padding_controll_top"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:paddingVertical="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="10dp"
            tools:ignore="NestedWeights" />

        <org.peyilo.readview.demo.view.DualThumbProgressBar
            android:id="@+id/padding_controll_bottom"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:paddingVertical="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="5dp" />

    </GridLayout>


</androidx.constraintlayout.widget.ConstraintLayout>